<%= render "users/driver_nav" %>
<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table>
  <thead>
    <tr>
      <th> Time </th>
      <th> Source </th>
      <th> Destination <th>
      <th> number of seats <th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
      <th> <%=I18n.l(trip.dep_time.to_datetime, format: :long)%> </th>
        <th> <%=trip.destination&.name%> </th>
        <th> <%=trip.source&.name%> <th>
        <th> <%=trip.seats%> <th>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trip', new_trip_path %>
